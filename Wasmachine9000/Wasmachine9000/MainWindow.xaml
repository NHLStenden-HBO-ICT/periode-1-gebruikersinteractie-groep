<Window x:Class="Wasmachine9000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStyle="None"
        WindowState="Maximized"
        xmlns:local="clr-namespace:Wasmachine9000"
        mc:Ignorable="d"
        Title="MainWindow" Height="540" Width="960">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="71*" />
            <RowDefinition Height="62*" />
            <RowDefinition Height="66.5*" />
            <RowDefinition Height="66.5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125*" />
            <ColumnDefinition Width="273.5*" />
            <ColumnDefinition Width="125*" />
        </Grid.ColumnDefinitions>
        <Button Margin="24,33,114.5,41" x:Name="Settings" Click="Settings_Click">
            <TextBlock FontSize="15">Instellingen</TextBlock>
        </Button>
        <Rectangle Fill="#FFFFFCC7" Grid.Column="1" Grid.Row="0" MaxHeight="100px" MaxWidth="475px"/>
        <Button Grid.Column="1" Grid.Row="1" MaxHeight="100px" MaxWidth="475px" x:Name="Start" Click="Start_Click">
            <TextBlock FontSize="50">Start</TextBlock>
        </Button>
        <Button Grid.Column="1" Grid.Row="2" MaxHeight="100px" Width="237.5px" HorizontalAlignment="Left" x:Name="Winkel" Click="Winkel_Click">
            <TextBlock FontSize="40">Winkel</TextBlock>
        </Button>
        <Button Grid.Column="1" Grid.Row="2" MaxHeight="100px" Width="228.5px" HorizontalAlignment="Right" x:Name="Oudermenu" Click="Oudermenu_Click">
            <TextBlock FontSize="40">Oudermenu</TextBlock>
        </Button>
    </Grid>
</Window>
